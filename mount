sudo losetup /dev/loop4 floppy.img
sudo mount /dev/loop4 /mnt -t msdos -o "fat=12"
#su
sudo rm /mnt/proc
sudo cp apps/example/proc /mnt/proc
sudo rm /mnt/editor
sudo cp apps/editor/editor /mnt/editor
sudo rm /mnt/mproc
sudo cp apps/multiprocessing/mproc /mnt/mproc
sudo umount /mnt
sudo losetup -d /dev/loop4

sudo losetup /dev/loop4 hdd.img
sudo mount /dev/loop4 /mnt -t msdos -o "fat=32"
#su
sudo rm /mnt/proc
sudo cp apps/example/proc /mnt/proc
sudo rm /mnt/editor
sudo cp apps/editor/editor /mnt/editor
sudo rm /mnt/mproc
sudo cp apps/multiprocessing/mproc /mnt/mproc
sudo umount /mnt
sudo losetup -d /dev/loop4

VBoxManage convertfromraw --format VDI hdd.img hdd.vdi

